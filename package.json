{
  "name": "lchaty-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "lChaty Frontend - Multi-page Vite + TypeScript + TailwindCSS",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js --report-unused-disable-directives --max-warnings 0",
    "e2e": "playwright test",
    "e2e:live": "cross-env E2E_MODE=LIVE playwright test",
    "e2e:ui": "playwright test --ui",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dayjs": "^1.11.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.50.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.10",
    "@playwright/test": "^1.47.0",
    "start-server-and-test": "^2.0.0",
    "cross-env": "^7.0.3"
  }
}